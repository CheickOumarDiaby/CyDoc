- service_item = f.object

%tr[service_item]
  %td.right
    = f.input :quantity, :as => :string, :input_html => {:style => "width: 3em; text-align: right"}
  %td.right
    = service_item.code
    - if service_item.needs_ref_code?
      %br
      = f.input :ref_code, :placeholder => 'Referenzcode'
  %td= service_item.text
  %td.right
    = sprintf('%.2f', service_item.amount_mt)
    \&nbsp;AL
  %td.right
    = sprintf('%.2f', service_item.amount_tt)
    \&nbsp;TL
  %td.right
    %b= currency_fmt(service_item.amount('Krankheit'))
    = "/"
    %b= currency_fmt(service_item.amount('Unfall'))
  %td
    = link_to image_tag('delete.png'), service_item, :method => :delete, :remote => true
